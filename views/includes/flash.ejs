<!-- For Success  -->

<% if(success && success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show col-md-6 col-12 mx-auto mt-2"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<!-- For Error -->

<% if(error && error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show col-md-6 col-12 mx-auto mt-2"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
