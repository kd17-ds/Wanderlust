<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h1 class="mb-3">Create a New Listing</h1>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Enter Title : </label>
        <input
          class="form-control"
          type="text"
          name="listing[title]"
          id="title"
          required
        />
        <div class="invalid-feedback">Title can't be Empty!</div>
        <div class="valid-feedback">Title Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Enter Description : </label>
        <textarea
          rows="5"
          cols="5"
          name="listing[description]"
          id="description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description Required!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image"> Upload Image : </label>
        <input
          class="form-control"
          type="file"
          name="listing[image]"
          id="image"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-label" for="price">Enter Price : </label>
          <input
            class="form-control"
            type="number"
            name="listing[price]"
            id="price"
            required
          />
          <div class="invalid-feedback">Price must be filled!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label class="form-label" for="country">Enter Country : </label>
          <input
            class="form-control"
            type="text"
            name="listing[country]"
            id="country"
            required
          />
          <div class="invalid-feedback">Country Required!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Enter location : </label>
        <input
          class="form-control"
          type="text"
          name="listing[location]"
          id="location"
          required
        />
        <div class="invalid-feedback">Location Required!</div>
      </div>

      <button class="btn btn-dark">Submit</button>
    </form>
  </div>
</div>
