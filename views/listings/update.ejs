<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h1 class="mb-3">Update Listing</h1>
    <form action="/listings/<%= list._id %>?_method=PUT" method="post">
      <div class="mb-3">
        <label class="form-label" for="title">Enter Property Name : </label>
        <input
          class="form-control"
          type="text"
          name="listing[title]"
          id="title"
          value="<%= list.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Enter Description : </label>
        <textarea
          class="form-control"
          rows="5"
          cols="5"
          name="listing[description]"
          id="description"
        >
<%= list.description %></textarea
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="image"> Upload Image Url : </label>
        <input
          class="form-control"
          type="text"
          name="listing[image.url]"
          id="image"
          value="<%= list.image.url %>"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-label" for="price">Enter Price : </label>
          <input
            class="form-control"
            type="number"
            name="listing[price]"
            id="price"
            value="<%= list.price %>"
          />
        </div>
        <div class="mb-3 col-md-8">
          <label class="form-label" for="country">Enter Country : </label>
          <input
            class="form-control"
            type="text"
            name="listing[country]"
            id="country"
            value="<%= list.country %>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Enter location : </label>
        <input
          class="form-control"
          type="text"
          name="listing[location]"
          id="location"
          value="<%= list.location %>"
        />
      </div>
      <br />
      <button class="btn btn-dark">Submit</button>
    </form>
  </div>
</div>
