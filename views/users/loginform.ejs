<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <h1 class="mb-4">Log in :</h1>
    <form action="/login1" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label class="form-label" for="username">Enter Username : </label>
        <input
          class="form-control"
          type="text"
          name="username"
          id="username"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="password">Enter Password : </label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          required
        />
      </div>
      <button type="submit" class="btn btn-success mt-2">Log in</button>
    </form>
  </div>
</div>
