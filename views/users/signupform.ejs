<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <h1 class="mb-4">Sign Up Form :</h1>
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label class="form-label" for="username">Enter Username : </label>
        <input
          class="form-control"
          type="text"
          name="username"
          id="username"
          required
        />
        <div class="invalid-feedback">Username can't be Empty!</div>
        <div class="valid-feedback">Username Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Enter Email : </label>
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          required
        />
        <div class="invalid-feedback">Email can't be Empty!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Enter Password : </label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          required
        />
        <div class="invalid-feedback">Password can't be Empty!</div>
      </div>
      <button class="btn btn-success mt-2">Sign Up</button>
    </form>
  </div>
</div>
